<div class="new-instrument-wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1512053459797-38c3a066cabd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
<div class="container display-new-instrument">
 <div class="form new-instrument">
  <h2>Add a new Instrument</h2>
    <%= simple_form_for(@instrument) do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :category, collection: ["guitars", "keyboards", "brass", "percussion", "orchestral"] %>
      <%= f.input :description %>
      <%= f.input :price_per_day %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit 'Add Instrument', class: "btn btn-warning btn-form-hp" %>
    <% end %>
</div>
  </div>
</div>
