<div class="instrument-wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "instruments.jpg" %>');">
  <div class="container ">
    <div class="card-product instrument-detail">
      <img src="<%= cl_image_path @instrument.photo, crop: :fill, height: 400 %>">
      <div class="card-product-infos">
        <h2 class="instrument-detail"><%= @instrument.name %></h2>

        <p><i class="fas fa-music"> </i> <%= @instrument.category.capitalize %></p>
        <p><i class="fas fa-map-marked-alt"> </i> <%= @instrument.location.capitalize %></p>
        <p><i class="fas fa-comment-dots"> </i><br> <%= @instrument.description %></p>
        <div class="price-detail">
          <p><strong> <%= @instrument.price_per_day%> â‚¬/day</strong></p>
        </div>
        <div class="book-now-button">
          <%= link_to 'Book Now!', new_instrument_booking_path(@instrument), class: "btn btn-warning btn-form-hp"%>
        </div>
      </div>
    </div>

  </div>
</div>
