<div class="instrument-wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1512053459797-38c3a066cabd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="container ">
    <div class="row">
      <div class="col">
        <div class="instrument-displayed">
          <h1> <%= @instrument.name %> </h1>
          <%= cl_image_tag @instrument.user.avatar, class: "avatar-large", alt: "avatar-bordered" %>
          <div class="content-box">
            <p><i class="fas fa-music"> </i> <%= @instrument.category %></p>
            <p><i class="fas fa-map-marked-alt"> </i> <%= @instrument.location %></p>
            <p><i class="fas fa-comment-dots"> </i><%= @instrument.description %></p>
            <p> <%= @instrument.price_per_day%> â‚¬/day </p>
            <div class="book-now-button">
              <%= link_to 'Book Now!', new_instrument_booking_path(@instrument), class: "btn btn-warning btn-form-hp"%>
            </div>

            <div
              id="map"
              style="width: 100%;
              height: 600px;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
            ></div>
          </div>
          <%= simple_form_for [@instrument, @booking] do |f| %>
            <%= f.input :startdate %>
            <%= f.input :enddate %>
            <%= f.submit 'Book now!', class: "btn btn-warning btn-form-hp" %>
          <% end %>

        </div>
      </div>
      <div class="col">
        <div class="instrument-pictured" style="background-image: url('<%= cl_image_path @instrument.photo, crop: :fill, height: 400 %>')">
        </div>
      </div>
    </div>
  </div>


</div>
