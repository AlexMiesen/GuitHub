<body>
  <div class="index-container">
    <div>
      <div class="index-banner">
        <h1>Matching results</h1>
      </div>
      <div class="index-cards-grid">
       <% @instruments.each do |instrument| %>
         <div class="card-trip" >
          <img src="<%= cl_image_path instrument.photo, width: 1200, crop: :fill %>">
          <div class="card-trip-infos">
            <div class="card-trip-instrument-name">
              <h2><%= instrument.name %></h2>
              <p><%= instrument.price_per_day %>â‚¬/day</p>
            </div>
            <h2> <%= link_to "Details", instrument_path(instrument), class: "btn btn-warning btn-instrument-index"%> </h2>
          </div>
        </div>
      <% end %>
      </div>
  </div>
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
</body>
