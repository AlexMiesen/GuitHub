<div class="dash-divider mt-5 ml-5 p-2">
  <div class="dash-card dash-profile">
    <%= cl_image_tag @user.avatar, width: 100, height: 100, crop: :fill, class: 'avatar-large' %>
    <h3><%= @user.first_name %> <%= @user.last_name %></h3>
    <p><%= @user.description %></p>
    <div class="d-flex justify-content-end mr-2">
      <strong><%= @user.city %></strong>
    </div>
  </div>

  <div class="instrument-container container mt-5">
    <% if @user.instruments %>
      <h2>Your instruments</h2>
      <div class="row">
        <% @user.instruments.each do |instrument| %>
          <div class="instrument-card col-6 p-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url('<%= cl_image_path instrument.photo, height: 300, width: 400, crop: :fill %>')">
          </div>
          <% end %>

          <div class="instrument-card col-6 p-3">
            <%= link_to new_instrument_path do %>
              <i class="fas fa-plus fa-6x col-6"></i>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>

</div>








